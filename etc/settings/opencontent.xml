<?xml version="1.0"?>
<settings target="opencontent.indexdata.com:210/*">
  <!-- Open content targets -->
  <set target="opencontent.indexdata.com:210/oaister" name="pz:name" value="OAIster"/>
  <set target="opencontent.indexdata.com:210/oca-all" name="pz:name" value="Open Content Alliance"/>
  <set target="opencontent.indexdata.com:210/wikipedia" name="pz:name" value="Wikipedia"/>
  <set target="opencontent.indexdata.com:210/dmoz" name="pz:name" value="Open Directory"/>
  <set target="opencontent.indexdata.com:210/gutenberg" name="pz:name" value="Project Gutenberg"/>
  <!-- settings apply to all targets -->
  <!-- mapping for unqualified search -->
  <set name="pz:cclmap:term" value="u=1016 t=l,r s=al 2=102"/>
  <!-- narrower default search for Wikipedia - full field match -->
  <set target="opencontent.indexdata.com:210/wikipedia" name="pz:cclmap:term" value="u=43 6=2"/>
  <!-- field-specific mappings -->
  <set name="pz:cclmap:ti" value="u=4 s=al 2=102"/>
  <set name="pz:cclmap:su" value="u=21 s=al 2=102"/>
  <set name="pz:cclmap:isbn" value="u=7 2=102"/>
  <set name="pz:cclmap:issn" value="u=8 2=102"/>
  <set name="pz:cclmap:date" value="u=30 r=r 2=102"/>
  <!-- Retrieval settings -->
  <set name="pz:requestsyntax" value="marc21"/>
  <set name="pz:elements" value="F"/>
  <!-- Result normalization settings -->
  <set name="pz:nativesyntax" value="iso2709"/>
  <set name="pz:xslt" value="marc21.xsl"/>
</settings>
